{
  "name": "react-wordcloud-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "React + D3 wordcloud component library with security fixes and modern tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/cp949/react-wordcloud.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
