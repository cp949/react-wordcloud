{
  "name": "cp949-wordcloud-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "React + D3 wordcloud component library with security fixes and modern tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/cp949/react-wordcloud.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
